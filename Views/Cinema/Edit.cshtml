@model Cinema

@{
    ViewData["Title"] = "Update Cinema";

}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8-offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
              
                <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="CinemaLogoPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input  type="submit" value="Update" class="btn btn-outline-success float-end mt-2"/>
                    <a class="btn btn-outline-secondary mt-2" asp-action="Index">Show All</a>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })
        //when ever the profile picture loads, on Change triggers the function
        $("#Logo").on("change", function () {
            //the output is assigned the element with the Id profiePictirePreview to get the placeholder
            var output = document.getElementById('CinemaLogoPreview');
            //and set the output variable of the source, and the source is this(i.e the profilepicture source)
            output.src = $(this).val();
        })
    </script>
}